<% provide(:title, t("password_reset.edit.title")) %>
<h1><%= t "password_reset.edit.title" %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user, url: password_reset_path(params[:id])) do |f| %>
      <%= render "shared/error_messages", object: f.object %>
      <!-- email will auto available in edit action because it got form passsword
      reset but after submit it will lost so use hidden field.link puts email in
      params[:email], whereas f.hidden_field puts it in params[:user][:email],
      to it's some that use hidden_field_tag ,this purpose is use in get_user
      method called in two case edit and update. note when submit will attach
      reset_token as id in /password_resets/id -->
      <%= hidden_field_tag :email, @user.email  %>

      <%= f.label :password, t("password_reset.edit.password") %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("password_reset.edit.confirmation") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <%= f.submit t("password_reset.edit.submit"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
