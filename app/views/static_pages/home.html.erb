<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
      <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    <div class="col-md-8">
      <h3><%= t("static_pages.home.feed") %></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1><%= t "static_pages.home.welcome" %></h1>
    <h2>
      <%= t "static_pages.home.page" %>
      <a href="http://www.railstutorial.org/"><%= t "static_pages.home.rails" %>
        </a>
      <%= t "static_pages.home.sample" %>
    </h2>
    <%= link_to t("static_pages.home.sign_up"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
  <%= link_to image_tag("rails.png", alt: t("static_pages.home.logo")),
    "http://rubyonrails.org/" %>
<% end %>
